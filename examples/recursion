factorial n =
    if n <= 1 then 1
    else n * factorial (n - 1)


factorialTail n acc =
  if n <= 1 then acc
  else factorialTail (n - 1) (n * acc)

factorialTail 1 acc = acc
factorialTail n acc = factorialTail (n - 1) (n * acc)

factorial 0 = 1
factorial n = n * factorial (n - 1)

https://www.willamette.edu/~fruehr/haskell/evolution.html
